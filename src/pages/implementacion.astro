      color: #cbd5e1; /* AAA Compliant */
      line-height: 1.7;
      max-width: 75ch;
    }

    .quick-start {
      padding: 3rem 0;
    }

    .quick-start h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      letter-spacing: 0;
    }

    .step-card {
      padding: 2rem;
      background: #1c1c1c;
      border: 2px solid #353535;
      border-radius: 12px;
      margin-bottom: 2rem;
      transition: all 0.3s ease;
    }

    .step-card:hover {
      border-color: #667eea;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .step-card:focus-within {
      outline: 2px solid #fbbf24;
      outline-offset: 2px;
    }

    .step-card h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      color: #fff;
      letter-spacing: 0;
    }

    .step-card p {
      color: #cbd5e1; /* AAA Compliant */
      margin-bottom: 1rem;
      line-height: 1.7;
      max-width: 75ch;
    }

    .code-box {
      background: #0f172a;
      padding: 1.5rem;
      border-radius: 8px;
      overflow-x: auto;
      border: 1px solid #334155;
    }

    .code-box pre {
      margin: 0;
    }

    .code-box code {
      font-family: 'Courier New', monospace;
      font-size: 0.875rem;
      color: #cbd5e1; /* AAA Compliant */
      line-height: 1.6;
    }

    .features-section {
      padding: 4rem 0;
    }

    .features-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      text-align: center;
      letter-spacing: 0;
    }

    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .feature-box {
      padding: 1.5rem;
      background: #1c1c1c;
      border: 2px solid #353535;
      border-radius: 8px;
      text-align: center;
      transition: all 0.3s ease;
    }

    .feature-box:hover {
      border-color: #667eea;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .feature-box:focus-within {
      outline: 2px solid #fbbf24;
      outline-offset: 2px;
    }

    .feature-box h3 {
      font-size: 1.125rem;
      margin-bottom: 0.5rem;
      color: #fff;
      letter-spacing: 0;
    }

    .feature-box p {
      color: #cbd5e1; /* AAA Compliant */
      font-size: 0.875rem;
      line-height: 1.7;
      max-width: 75ch;
      margin-left: auto;
      margin-right: auto;
    }

    .cta-section {
      text-align: center;
      padding: 4rem 2rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 16px;
      margin: 2rem 0;
    }

    .cta-section h2 {
