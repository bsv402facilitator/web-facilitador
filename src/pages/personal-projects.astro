---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import Project from "../components/Project.astro";

const projects = [
  {
    title: "TeleJS",
    desc: [
      "Built a lightweight, open-source Slack API framework for efficient bot development",
      "Developed in Node.js and published as an NPM package"
    ],
    tech: ["Node.js", "NPM"]
  },
  {
    title: "pyPrompter",
    desc: [
      "Contributed to a popular open-source Python pip package for building interactive CLIs",
      "Developed a feature that lets you 'freeze' inquirer choices"
    ],
    tech: ["Python"]
  },
  {
    title: "WebAssetHub",
    desc: [
      "Created a web scraper tool that monitors digital assets across multiple platforms and offers them at competitive prices",
      "Sold over 700 items"
    ],
    tech: ["Python", "Selenium"]
  }
];
---

<Layout
  title="Proyectos Personales | Facilitador BSV"
  description="Portfolio de proyectos personales y de código abierto, desde frameworks de bots hasta herramientas de scraping."
  lang="es"
>
  <Navbar selectedItem="personal-projects" />
  <div class="page-wrapper">
    <main class="main-content" id="main-content">
      <div class="container">
        <section class="page-hero">
          <Breadcrumb
            items={[
              { label: "Inicio", href: "/" },
              { label: "Proyectos Personales" }
            ]}
          />
          <h1>Proyectos Personales</h1>
          <p class="lead">
            Proyectos de código abierto y herramientas personales, desde frameworks de <span lang="en">bots</span> hasta <span lang="en">web scrapers</span>.
          </p>
        </section>

        <section class="projects-section">
          <h2>Proyectos Destacados</h2>
          <div class="projects-container">
            {projects.map(project => (
              <Project
                title={project.title}
                desc={project.desc}
                tech={project.tech}
              />
            ))}
          </div>
        </section>
      </div>
    </main>
  </div>

  <style>
    .page-wrapper {
      width: 100%;
      min-height: 100vh;
    }

    .main-content {
      width: 100%;
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    .container {
      width: 100%;
    }

    .page-hero {
      padding: 2rem 0 3rem;
    }

    .page-hero h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 1rem;
      letter-spacing: 0;
      line-height: 1.2;
    }

    .lead {
      font-size: 1.125rem;
      color: #cbd5e1; /* AAA Compliant */
      line-height: 1.7;
      max-width: 75ch;
    }

    .projects-section {
      padding: 2rem 0;
    }

    .projects-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      letter-spacing: 0;
    }

    .projects-container {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    @media (max-width: 768px) {
      .page-hero h1 {
        font-size: 2rem;
      }
    }
  </style>
</Layout>
