---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import Project from "../components/Project.astro";

const projects = [
  {
    title: "CodeCraft",
    desc: [
      "Developed a large-scale e-commerce platform for indie game developers",
      "Designed and implemented UI, backend, and database architecture",
      "Contributed to RESTful API and GraphQL design",
      "Led a team of three engineers for several months"
    ],
    tech: ["React", "Next.js", "Node.js", "MongoDB", "Heroku"]
  },
  {
    title: "CloudMason",
    desc: [
      "Contributed to microservices architecture design for email distribution system",
      "Created a backend infrastructure with queues and an event bus",
      "Designed to handle a high volume ~3 million emails per day"
    ],
    tech: ["Node.js", "RabbitMQ", "Docker", "Kubernetes"]
  },
  {
    title: "Sarah (HealthEase.io)",
    desc: [
      "Contributed to Israel's largest telehealth platform for doctors and patients",
      "Developed appointment and billing systems",
      "Resolved live production bugs and server issues"
    ],
    tech: ["React", "Node.js", "Express.js", "MySQL", "AWS"]
  }
];
---

<Layout
  title="Software Development | Facilitador BSV"
  description="Portfolio de proyectos de desarrollo de software, desde plataformas e-commerce hasta sistemas de telehealth."
  lang="es"
>
  <Navbar selectedItem="software-development" />
  <div class="page-wrapper">
    <main class="main-content" id="main-content">
      <div class="container">
        <section class="page-hero">
          <Breadcrumb
            items={[
              { label: "Inicio", href: "/" },
              { label: "Desarrollo de Software" }
            ]}
          />
          <h1>Desarrollo de Software</h1>
          <p class="lead">
            Proyectos de desarrollo full-stack, desde plataformas de e-commerce hasta sistemas de telehealth escalables.
          </p>
        </section>

        <section class="projects-section">
          <h2>Proyectos Destacados</h2>
          <div class="projects-container">
            {projects.map(project => (
              <Project
                title={project.title}
                desc={project.desc}
                tech={project.tech}
              />
            ))}
          </div>
        </section>
      </div>
    </main>
  </div>

  <style>
    .page-wrapper {
      width: 100%;
      min-height: 100vh;
    }

    .main-content {
      width: 100%;
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    .container {
      width: 100%;
    }

    .page-hero {
      padding: 2rem 0 3rem;
    }

    .page-hero h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 1rem;
      letter-spacing: 0;
      line-height: 1.2;
    }

    .lead {
      font-size: 1.125rem;
      color: #cbd5e1; /* AAA Compliant */
      line-height: 1.7;
      max-width: 75ch;
    }

    .projects-section {
      padding: 2rem 0;
    }

    .projects-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      letter-spacing: 0;
    }

    .projects-container {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    @media (max-width: 768px) {
      .page-hero h1 {
        font-size: 2rem;
      }
    }
  </style>
</Layout>
