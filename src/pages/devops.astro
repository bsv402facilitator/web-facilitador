---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import Project from "../components/Project.astro";

const projects = [
  {
    title: "NetCare",
    desc: [
      "Built an infrastructure for a telemedicine startup focusing on remote patient monitoring",
      "Created Azure environment from scratch using Terraform as a IaC tool",
      "Developed a comprehensive CI/CD pipeline for mobile app deployment",
    ],
    tech: ["Terraform", "Azure", "Docker", "Nginx", "GitLab CI/CD"]
  },
  {
    title: "DataMesh",
    desc: [
      "Built an infrastructure for a data analytics platform",
      "Configured VMs and deployed a multi-node Kubernetes cluster on AWS",
      "Designed to handle a high volume of ~5 million data points per day",
      "Integrated Grafana and Prometheus for monitoring",
    ],
    tech: ["Docker", "Kubernetes", "AWS", "Node.js", "RabbitMQ"]
  },
  {
    title: "CloudEase",
    desc: [
      "Migrated a cloud-based CRM system from one provider to another",
      "Built the new GCP infrastructure using Terraform as a IaC tool",
      "Deployed logging and monitoring tools in GKE cluster",
    ],
    tech: ["GCP", "Terraform", "Kubernetes", "GitLab"]
  }
];
---

<Layout
  title="DevOps | Facilitador BSV"
  description="Portfolio de proyectos de DevOps y Cloud, desde infraestructura como código hasta clusters de Kubernetes escalables."
  lang="es"
>
  <Navbar selectedItem="devops" />
  <div class="page-wrapper">
    <main class="main-content" id="main-content">
      <div class="container">
        <section class="page-hero">
          <Breadcrumb
            items={[
              { label: "Inicio", href: "/" },
              { label: "DevOps" }
            ]}
          />
          <h1><span lang="en">DevOps</span></h1>
          <p class="lead">
            Proyectos de infraestructura cloud, <span lang="en">CI/CD</span>, y orquestación con <span lang="en">Kubernetes</span>.
          </p>
        </section>

        <section class="projects-section">
          <h2>Proyectos Destacados</h2>
          <div class="projects-container">
            {projects.map(project => (
              <Project
                title={project.title}
                desc={project.desc}
                tech={project.tech}
              />
            ))}
          </div>
        </section>
      </div>
    </main>
  </div>

  <style>
    .page-wrapper {
      width: 100%;
      min-height: 100vh;
    }

    .main-content {
      width: 100%;
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    .container {
      width: 100%;
    }

    .page-hero {
      padding: 2rem 0 3rem;
    }

    .page-hero h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 1rem;
      letter-spacing: 0;
      line-height: 1.2;
    }

    .lead {
      font-size: 1.125rem;
      color: #cbd5e1; /* AAA Compliant */
      line-height: 1.7;
      max-width: 75ch;
    }

    .projects-section {
      padding: 2rem 0;
    }

    .projects-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      letter-spacing: 0;
    }

    .projects-container {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    @media (max-width: 768px) {
      .page-hero h1 {
        font-size: 2rem;
      }
    }
  </style>
</Layout>
